        function limitChar(element) {
            var maxChar = 55;
            var ele = document.getElementById(element.id);
            var charLen = ele.value.length;
            var p = document.getElementById('charCounter');
            p.innerHTML = charLen + '/55'+' ตัวอักษร';
        
